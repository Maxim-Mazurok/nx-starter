{
  "compileOnSave": false,
  "files": [],
  "include": [],
  "exclude": ["node_modules", "tmp"],
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipDefaultLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noPropertyAccessFromIndexSignature": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2021"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@root/analytics": ["libs/analytics/src/index.ts"],
      "@root/fetcher": ["libs/fetcher/src/index.ts"],
      "@root/ui": ["libs/ui/src/index.ts"]
    }
  }
}
